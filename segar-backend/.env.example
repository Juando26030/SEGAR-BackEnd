# ==============================================================================
# EJEMPLO DE VARIABLES DE ENTORNO - SEGAR Backend
# ==============================================================================
# Archivo: .env.example
#
# INSTRUCCIONES:
# 1. Copiar este archivo como .env.production
# 2. Reemplazar los valores con los reales
# 3. NO subir .env.production a Git (está en .gitignore)
# ==============================================================================

# Configuración del Servidor
SERVER_PORT=8090

# Configuración de Keycloak (URLs públicas con HTTPS)
KEYCLOAK_AUTH_SERVER_URL=https://tu-dominio.duckdns.org/auth
KEYCLOAK_ISSUER_URI=https://tu-dominio.duckdns.org/auth/realms/segar
KEYCLOAK_JWK_SET_URI=https://tu-dominio.duckdns.org/auth/realms/segar/protocol/openid-connect/certs
KEYCLOAK_REALM=segar
KEYCLOAK_CLIENT_ID=segar-backend
KEYCLOAK_CLIENT_SECRET=tu-client-secret-aqui

# Perfil de Spring Boot
SPRING_PROFILES_ACTIVE=production

# Configuración de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password-aqui

# Configuración de sincronización de emails
EMAIL_SYNC_ENABLED=true
EMAIL_SYNC_INTERVAL=300000
EMAIL_SYNC_ON_STARTUP=true

# Google Cloud Platform
GCP_ENABLED=false

# Seguridad - Credenciales de Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=tu-password-seguro-aqui

